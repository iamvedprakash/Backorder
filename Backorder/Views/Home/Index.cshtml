@model List<backordersummary>

<div id="backordersummary" class="row">
    <div id="itemsummary" class="col-8">
        <div id="itemsummarytitle">
            <h5>Summary</h5>
        </div>
        <div id="itemsummarydata">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Item</th>
                        <th>Family</th>
                        <th>QOH</th>
                        <th>Price</th>
                        <th>BO_Quantity</th>
                        <th>BO_Amount</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr id="@item.Item" class="itemrow">
                            <td>@item.Item</td>
                            <td>@item.Family</td>
                            <td>@item.QOH</td>
                            <td>@item.Price</td>
                            <td>@item.BO_Quantity</td>
                            <td>@item.BO_Amount</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div id="itemstatus" class="col-4">
        <div id="itemstatustitle">
            <h5>Status</h5>
        </div>
        <div id="itemstatusdata">
            <form>
                <label for="item" class="form-label"><b>Item:</b></label>
                <input type="text" id="item" name="item" class="form-control" readonly>

                <label for="issue" class="form-label"><b>Issue:</b></label>
                @if (ViewBag.Role == "W")
                {
                    <select id="issue" name="issue" class="form-control">
                        <option value=""></option>
                        <option value="Manufacturing Issue">Manufacturing Issue</option>
                        <option value="Supply Issue">Supply Issue</option>
                        <option value="Other">Other</option>
                    </select>
                }
                else
                {
                    <select id="issue" name="issue" class="form-control" readonly>
                        <option value=""></option>
                        <option value="Manufacturing Issue">Manufacturing Issue</option>
                        <option value="Supply Issue">Supply Issue</option>
                        <option value="Other">Other</option>
                    </select>
                }
                

                <label for="comment" class="form-label"><b>Comment:</b></label>
                @if (ViewBag.Role == "W")
                {
                    <textarea id="comment" name="comment" class="form-control"></textarea>
                }
                else
                {
                    <textarea id="comment" name="comment" class="form-control" readonly></textarea>
                }
                

                <label for="recovery-date" class="form-label"><b>Recovery Date:</b></label>
                @if (ViewBag.Role == "W")
                {
                    <input type="date" id="recovery-date" name="recovery-date" value="" placeholder="dd-mm-yyyy" class="form-control">
                }
                else
                {
                    <input type="date" id="recovery-date" name="recovery-date" value="" placeholder="dd-mm-yyyy" class="form-control" readonly>
                }
                

                <label for="poc" class="form-label"><b>POC:</b></label>
                @if (ViewBag.Role == "W")
                {
                    <input type="checkbox" id="poc" name="poc" class="form-check" >
                }
                else
                {
                    <input type="checkbox" id="poc" name="poc" class="form-check" disabled>
                }


                <label for="modify-by" class="form-label"><b>Modify By:</b></label>
                <input type="text" id="modify-by" name="modify-by" class="form-control" readonly>
                
                <label for="modify-date" class="form-label"><b>Modify Date:</b></label>
                <input type="date" id="modify-date" name="modify-date" value="" placeholder="dd-mm-yyyy" class="form-control" readonly>

                @if (ViewBag.Role == "W")
                {
                    <button type="submit" id="staussubmit" class="btn btn-primary">Submit</button>
                }
                
                <button type="submit" id="exportdata" class="btn btn-primary">Export</button>
                
            </form> 
        </div>

    </div>

</div>
